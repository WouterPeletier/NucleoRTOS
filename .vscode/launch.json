{
    "version": "0.2.0",
    "projectName": "afc",
    "configurations": [
        {
            "name": "STlink launch",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/afc.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "stutil",
            "device": "STM32F446RE",
            "interface": "swd",
            //"runToEntryPoint": "true", // else it starts at reset handler - not interested
            "preLaunchTask": "Build and Flash", // configured in tasks.json
            //"preLaunchCommands": ["make"], // you can execute command instead of task
            //"svdFile": "", // Include svd to watch device peripherals
            //"swoConfig": {} // currently (v1.7.0) not supported
        },
        {
            "name": "STlink attach",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/afc.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "stutil",
            "device": "STM32F446RE",
            "interface": "swd",
            "runToEntryPoint": "true", // else it starts at reset handler - not interested
            // "preLaunchTask": "Build all", // configured in tasks.json
            // "preLaunchCommands": ["make"], // you can execute command instead of task
            //"svdFile": "", // Include svd to watch device peripherals
            //"swoConfig": {}
        },
    ]
}